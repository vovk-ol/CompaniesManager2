@helper GetTreeView(List<CompaniesManager2.Models.CompanyNode> companies)
{
foreach (var comp in companies)
{
        <li>           
            @if (comp.childs!=null && comp.childs.Count > 0)
            {
                <span class="collapse collapsible">&nbsp;</span>

            }
            else
            {
                <span style="width:15px; display:inline-block">&nbsp;</span>
            }
            <span>
                @comp.Name (@comp.Earning $K | @comp.TotallEarning $K)
            </span>
            <a href="~/TreeView/CreateCompany?id=@comp.Id">new</a>
            <a href="~/TreeView/EditCompany?id=@comp.Id">edt</a>
            <a href="~/TreeView/DeleteCompany?id=@comp.Id">del</a>
            @if (comp.childs != null && comp.childs.Count > 0)
            {
                <ul>
                    @TreeView.GetTreeView(comp.childs)
                    @*Recursion*@
                </ul>
            }
        </li>
                }
}